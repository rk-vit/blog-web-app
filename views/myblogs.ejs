

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Main Page</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link href="/styles/styles.css" rel="stylesheet">
    </head>
    <body>
      <%- include('partials/header.ejs') %>
      <div class="head">
        <h1 style="font-size: 30px; margin-left: 50px;"> My Blogs </h1>
        <a type="button" class="btn btn-primary" style="margin-right: 50px;" href="/newblog">New Blog +</a>
      </div>
      <hr>
      <%if(post.length==0){ %>
        <h1>No posts yet , create one ? </h1>
      <% }else{ %>
        <ul> 
          <% post.forEach((post)=>{   %>
          <div class="container" id="postcontainer">
            <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
              <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
                 <%= post.user_id %>  
                 <%= post.author %>  
                 <%= post.title %>  
                 <%= post.Text %>  
                 <%= post.date %>  
                <h1 class="display-4 fw-bold lh-1 text-body-emphasis"> </h1>
                <p class="lead">   </p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4 mb-lg-3">
                
                  <form action="/edit?_func=PUT" method="post">
                    <input type="hidden" value="<%= post.post_id %>" name="postid">
                    <button type="submit" class="btn btn-secondary">Edit</button>
                  </form>
                  
                  <form action="/delete?_method=DELETE" method="post">
                    <input type="hidden" value="<%= post.post_id %>" name="postid">
                    <button type="submit" class="btn btn-danger " >Delete</button>
                  </form>
                  
                </div>
              </div>
            </div>
          </div> 
          <% })   %>
        </ul>
          

          
        
      <% } %>
    </body>
</html>


